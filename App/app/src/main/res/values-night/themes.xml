<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MeDocTruyen" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/purple</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Enable window content transitions -->
        <item name="android:windowContentTransitions">true</item>

        <!-- Enable window draw system bar backgrounds -->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>

        <!-- Status bar color. Set it to transparent -->
        <item name="android:statusBarColor">@android:color/transparent</item>

        <!-- Window background is not drawn behind the system bars -->
        <item name="android:windowTranslucentStatus">true</item>

        <!-- Navigation bar color. Set it to transparent if needed -->
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>
</resources>