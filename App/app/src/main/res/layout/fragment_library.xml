<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".adapter.fragment.HomeFragment"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/banner3"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_below="@id/rankingList"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:src="@drawable/bn"
                android:scaleType="centerCrop"
                android:background="@drawable/rounded_button"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="10dp">

                <!-- TextView bên trái -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Truyện đang đọc"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:textStyle="bold"/>

                <!-- LinearLayout nằm ở cuối cùng bên phải -->
                <LinearLayout
                    android:id="@+id/truyenDangDoc"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="end|center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginLeft="15dp"
                        android:letterSpacing="-0.01"
                        android:text="Xem thêm"
                        android:textColor="#6c6c6c"
                        android:textSize="14dp" />

                    <ImageView
                        android:id="@+id/backButton1"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/next"
                        android:layout_marginLeft="5dp"/>
                </LinearLayout>

            </LinearLayout>
            <GridLayout
                android:id="@+id/gridReadStories"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="3"
                android:rowCount="2"
                android:alignmentMode="alignMargins"
                android:columnOrderPreserved="false"
                android:layout_marginStart="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="5dp">

                <!-- TextView bên trái -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Truyện đã thích"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:textStyle="bold"/>

                <!-- LinearLayout nằm ở cuối cùng bên phải -->
                <LinearLayout
                    android:id="@+id/truyenDaThich"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="end|center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:text="Xem thêm"
                        android:letterSpacing="-0.01"
                        android:textSize="14dp"
                        android:textColor="#6c6c6c"
                        android:layout_gravity="center" />

                    <ImageView
                        android:id="@+id/backButton2"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/next"
                        android:layout_marginLeft="5dp"/>
                </LinearLayout>

            </LinearLayout>
            <GridLayout
                android:id="@+id/gridFavStories"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="3"
                android:rowCount="2"
                android:alignmentMode="alignMargins"
                android:columnOrderPreserved="false"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Truyện đã xem gần đây"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:textStyle="bold"/>

                <LinearLayout
                    android:id="@+id/truyenDaXem"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="end|center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:text="Xem thêm"
                        android:textColor="#6c6c6c"
                        android:textSize="14dp"
                        android:layout_gravity="center"
                        android:letterSpacing="-0.01"/>

                    <ImageView
                        android:id="@+id/backButton"
                        android:layout_width="15dp"
                        android:layout_height="15dp"

                        android:src="@drawable/next"
                        android:layout_marginLeft="5dp"/>
                </LinearLayout>

            </LinearLayout>
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="70dp">
                <LinearLayout
                    android:id="@+id/linearViewedStories"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"/>
            </HorizontalScrollView>

        </LinearLayout>

    </ScrollView>

</LinearLayout>