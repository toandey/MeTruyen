<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".adapter.fragment.profile.ChangePasswordActivity"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:id="@+id/a"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:padding="16dp"
        android:elevation="8dp">

        <ImageView
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="Đổi mật khẩu"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:layout_gravity="center" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/a"
        android:layout_marginTop="20dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp">

        <TextView
            android:id="@+id/tvOldPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:letterSpacing="-0.02"
            android:text="Mật khẩu hiện tại:"
            android:textColor="@color/black"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/edtOldPassword"
            android:layout_width="match_parent"
            android:layout_below="@+id/tvOldPassword"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/rounded"
            android:drawablePadding="8dp"
            android:fontFamily="@font/inter_regular"
            android:inputType="text|textNoSuggestions"
            android:padding="10dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/tvNewPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edtOldPassword"
            android:layout_marginTop="10dp"
            android:letterSpacing="-0.02"
            android:text="Mật khẩu mới:"
            android:textColor="@color/black"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/edtNewPassword"
            android:layout_width="match_parent"
            android:layout_below="@+id/tvNewPassword"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/rounded"
            android:drawablePadding="8dp"
            android:fontFamily="@font/inter_regular"
            android:inputType="text|textNoSuggestions"
            android:padding="10dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/tvReNewPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edtNewPassword"
            android:text="Nhập lại mật khẩu mới:"
            android:textSize="18dp"
            android:layout_marginTop="15dp"
            android:textColor="@color/black"
            android:letterSpacing="-0.02"/>


        <EditText
            android:id="@+id/edtReNewPassword"
            android:layout_width="match_parent"
            android:layout_below="@+id/tvReNewPassword"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/rounded"
            android:drawablePadding="8dp"
            android:fontFamily="@font/inter_regular"
            android:inputType="text|textNoSuggestions"
            android:padding="10dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/black"/>

        <Button
            android:id="@+id/btnChangePassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edtReNewPassword"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/inter_medium"
            android:background="@drawable/rounded_button_background"
            android:text="Đổi mật khẩu"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:textAllCaps="false"
            android:letterSpacing="0.01"/>

    </RelativeLayout>


</RelativeLayout>