<!-- item_story.xml -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginEnd="20dp"
    android:layout_marginTop="5dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageTruyen"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:src="@drawable/image_cover"
            android:scaleType="centerCrop"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/tenTruyen"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="Cầu Xin Em yu Quay Lại"
            android:fontFamily="@font/rb_medium"
            android:letterSpacing="-0.03"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:lineSpacingMultiplier="0.9"/>

        <TextView
            android:id="@+id/theloaiTruyen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thể loại 1"
            android:fontFamily="@font/rb_regular"
            android:textSize="16dp"
            android:textColor="#888888"
            android:letterSpacing="-0.02" />
    </LinearLayout>

</LinearLayout>
