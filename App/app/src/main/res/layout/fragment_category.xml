<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:id="@+id/leftContainer"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_alignParentStart="true"
        android:background="#F3F4F6">

        <FrameLayout
            android:id="@+id/truyenHot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            tools:ignore="ExtraText">

            <ImageView
                android:id="@+id/ivHotIcon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical|left"
                android:layout_marginLeft="8dp"
                android:src="@drawable/fire"/>

            <TextView
                android:id="@+id/tvTruyenHot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hot"
                android:textSize="16sp"
                android:textColor="#6c6c6c"
                android:fontFamily="@font/rb_regular"
                android:layout_gravity="center_vertical|right"
                android:layout_marginRight="8dp"/>

        </FrameLayout>

        <FrameLayout
            android:id="@+id/truyenMoi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            tools:ignore="ExtraText">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical|left"
                android:src="@drawable/ic_new"
                android:layout_marginStart="7dp"/>

            <TextView
                android:id="@+id/tvTruyenMoi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mới"
                android:textSize="16sp"
                android:textColor="#6c6c6c"
                android:fontFamily="@font/rb_regular"
                android:layout_gravity="center_vertical|right"
                android:layout_marginEnd="7dp"/>

        </FrameLayout>

        <TextView
            android:id="@+id/tvTruyenFull"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đã Full"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="#6c6c6c"
            android:fontFamily="@font/rb_regular"
            android:padding="16dp"/>


        <TextView
            android:id="@+id/tvTheLoai1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thể loại 1"
            android:textSize="16sp"
            android:textColor="#6c6c6c"
            android:fontFamily="@font/rb_regular"
            android:padding="16dp"/>

        <TextView
            android:id="@+id/tvTheLoai2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thể loại 2"
            android:textSize="16sp"
            android:textColor="#6c6c6c"
            android:fontFamily="@font/rb_regular"
            android:padding="16dp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/tvTheLoai3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Thể loại 3"
            android:textSize="16sp"
            android:textColor="#6c6c6c"
            android:fontFamily="@font/rb_regular"
            android:padding="16dp"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rightContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toEndOf="@id/leftContainer">

        <TextView
            android:id="@+id/tvLoaiTruyen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Loại Truyện"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:fontFamily="@font/rb_medium"
            android:layout_marginStart="10dp"
            android:layout_marginTop="16dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewTruyen"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/tvLoaiTruyen"
            android:layout_marginTop="5dp"
            android:padding="10dp"
            android:layout_marginBottom="60dp"/>
    </RelativeLayout>

</RelativeLayout>
