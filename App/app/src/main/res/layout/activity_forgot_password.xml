<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/white">
    <View
        android:id="@+id/waveViewTop1"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/wave2"
        android:layout_marginTop="-15dp"/>
    <View
        android:id="@+id/waveViewTop2"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/wave3" />

    <RelativeLayout
        android:id="@+id/b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <TextView
            android:id="@+id/header1"
            android:layout_width="323dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/inter_medium"
            android:gravity="center_horizontal|top"
            android:letterSpacing="-0.02"
            android:text="Đặt lại mật khẩu của bạn"
            android:textColor="@color/black"

            android:textSize="23dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/logo"
            android:layout_width="220dp"
            android:layout_height="154dp"
            android:layout_below="@+id/header1"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="123dp"
            android:layout_marginTop="36dp"
            android:src="@drawable/resetpass" />

        <EditText
            android:id="@+id/signup_email"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/logo"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="15dp"
            android:layout_marginTop="26dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/rounded"
            android:drawableLeft="@drawable/baseline_mail_outline_24_orange"
            android:drawablePadding="8dp"
            android:fontFamily="@font/inter_regular"
            android:hint="Email"
            android:inputType="text|textNoSuggestions"
            android:padding="8dp"
            android:textColor="@color/black"
            android:textColorHint="#6c6c6c"/>

        <Button
            android:id="@+id/signup_button"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/signup_email"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/rounded_button_background"
            android:fontFamily="@font/inter_medium"
            android:letterSpacing="0.01"
            android:text="Đặt lại mật khẩu"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/loginRedirectText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/signup_button"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/inter_medium"
            android:letterSpacing="-0.02"
            android:text="Đã có mật khẩu? đăng nhập ngay"
            android:textColor="@color/purple"
            android:textSize="18dp" />

    </RelativeLayout>

    <View
        android:id="@+id/waveViewEnd1"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/wave1"/>
    <View
        android:id="@+id/waveViewEnd2"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/wave5" />

</RelativeLayout>